<Window x:Class="Slipstream.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
        Title="Slipstream Settings"
        Width="480"
        Height="420"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <skia:SKElement x:Name="SkiaCanvas"
                        PaintSurface="SkiaCanvas_PaintSurface"
                        MouseLeftButtonDown="SkiaCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="SkiaCanvas_MouseLeftButtonUp"
                        MouseMove="SkiaCanvas_MouseMove" />
    </Grid>
</Window>
